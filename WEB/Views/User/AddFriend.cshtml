@model WEB.Models.User

@{
    ViewData["Title"] = "Añadir contacto nuevo";
}

<h1>Sign In</h1>

<div class="text-center">
    <p style="font-size:larger; color:red">@ViewData["Error"]</p>
    <p style="font-size:larger; color:yellowgreen">@ViewData["Success"]</p>
</div>
<div class="row">
    <div class="col-4">
        <form asp-action="AddFriend">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="userName" class="control-label"></label>
                <input asp-for="userName" class="form-control" />
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar usuario" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>