@model IEnumerable<string>
@{
    ViewBag.Title = "Nuevo chat grupal";
}
<div class="text-center">
    <p style="font-size:larger; color:red">@ViewData["Error"]</p>
    <div class="row">
        Usuarios en el chat:
        @if (Model.Any())
        {
            @ViewBag.members
        }
        <form asp-action="GroupStart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label value="Nombre de usuario" class="control-label"></label>
                <input name="userName" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Añadir miembro" class="btn btn-primary" />
            </div>
        </form>
        @Html.ActionLink("Crear Chat Grupal", "CreateGroup", new { members = Model}, "btn-button")
    </div>
</div>