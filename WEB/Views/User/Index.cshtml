@model IEnumerable<WEB.Models.Chats>

@{
    ViewData["Title"] = "Home";
}

<h1>Chats</h1>

<div class="text-center">
    @if (!Model.Any())
    {
        <h3 >No tienes ningún chat activo.<br>Inicia una conversación con tus <a asp-action="Contacts">contactos</a> o <a asp-action="AddFriend">agrega nuevos amigos</a></h3>
    }
    else
    {
        <p class="text-center" style="font-size:medium"> <a asp-action="GroupChat">Crear chat grupal</a></p>
        
    }
</div>
