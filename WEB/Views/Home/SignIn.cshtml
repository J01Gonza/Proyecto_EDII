@model WEB.Models.Usuario

@{
    ViewData["Title"] = "Iniciar sesión";
}

<h1>Iniciar sesión</h1>

<div class="text-center">
    <p style="font-size:larger; color:red">@ViewData["Error"]</p>
    <p style="font-size:larger; color:yellowgreen">@ViewData["Success"]</p>
</div>
<div class="row">
    <div class="col-4">
        <form asp-action="SignIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User" class="control-label"></label>
                <input asp-for="User" class="form-control" />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type = "password" id = "Password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Siguiente" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>